---
interface EducationItem {
	institution: string;
	area: string;
	startDate: string;
	endDate: string;
}

interface Props {
	education: EducationItem[];
}

const { education } = Astro.props;
---

<section>
	<h3 class="text-xl font-bold uppercase tracking-widest text-[#9eb9ff] mb-3 font-heading">Formaci√≥n</h3>
	
	<div class="space-y-4 relative border-l-2 border-[#a855f7]/40 ml-3 pl-6 py-1">
		{education.map((edu) => (
			<div class="relative">
				<!-- Dot on timeline -->
				<div class="absolute -left-[29px] top-1 w-3 h-3 rounded-full bg-white border-4 border-[#1a1d3d]"></div>
				
				<div class="flex flex-col sm:flex-row sm:items-baseline gap-1 sm:gap-4 mb-0.5">
					<span class="text-white font-light text-sm w-20 font-heading">{edu.startDate} - {edu.endDate === edu.startDate ? '' : edu.endDate}</span>
					<div>
						<h4 class="text-base font-bold uppercase leading-tight font-heading">{edu.area}</h4>
						<div class="text-white/70 mt-0.5 font-light text-sm">{edu.institution}</div>
					</div>
				</div>
			</div>
		))}
	</div>
</section>
