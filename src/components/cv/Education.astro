---
interface EducationItem {
	institution: string;
	area: string;
	startDate: string;
	endDate: string;
	summary?: string;
}

interface Props {
	education: EducationItem[];
	title: string;
}

const { education, title } = Astro.props;
---

<section aria-labelledby="education-heading">
	<h3 id="education-heading" class="text-lg font-bold uppercase tracking-widest text-[var(--color-accent)] mb-2.5 font-heading">{title}</h3>
	
	<ol role="list" class="list-none space-y-4 relative border-l-2 border-[color:rgba(158,185,255,0.35)] ml-1 pl-6 py-1">
		{education.map((edu, index) => (
			<li class="relative group">
				<!-- Dot on timeline -->
				<div class="absolute -left-[32.5px] top-1 w-4 h-4 rounded-full bg-[var(--color-accent)] border-[3px] border-[var(--color-card-border)] group-hover:bg-[var(--color-accent-soft)] transition-colors"></div>
				
				<article aria-labelledby={`education-${index}-title`} class="space-y-2">
					<header class="flex flex-col sm:flex-row sm:items-baseline gap-1 sm:gap-2.5">
						<h4 id={`education-${index}-title`} class="text-sm font-bold uppercase font-heading text-white">{edu.area}</h4>
						<span aria-hidden="true" class="text-white/60 font-light whitespace-nowrap font-heading text-xs">â€¢</span>
						<p class="text-white/60 font-light whitespace-nowrap font-heading text-xs">
							{edu.startDate}
							{edu.endDate === edu.startDate ? '' : ` - ${ edu.endDate}`}
						</p>
					</header>
					
					<div class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-2" class:list={[edu.summary && edu.summary !== '' ? 'mb-2' : '']}>
						<p class="text-white/80 text-xs font-medium">{edu.institution}</p>
					</div>
					
					{edu.summary && edu.summary !== '' && (
						<div class="bg-white/5 rounded-lg p-2 border border-white/10">
							<p class="text-white/70 text-xs leading-snug">
								{edu.summary}
							</p>
						</div>
					)}
				</article>
			</li>
		))}
	</ol>
</section>
