---
interface Work {
	name: string;
	position: string;
	startDate: string;
	endDate: string;
	summary: string;
}

interface Props {
	work: Work[];
}

const { work } = Astro.props;
---

<section>
	<h3 class="text-xl font-bold uppercase tracking-widest text-[#9eb9ff] mb-3 font-heading">Experiencia</h3>
	
	<div class="space-y-4">
		{work.map((job) => (
			<div class="relative pl-0 group">
				<div class="flex flex-col sm:flex-row sm:items-baseline gap-1 sm:gap-4 mb-1.5">
					<span class="text-white/80 font-light whitespace-nowrap font-heading text-base">{job.startDate} - {job.endDate}</span>
					<h4 class="text-lg font-bold uppercase font-heading">{job.position}</h4>
				</div>
				
				<div class="text-white/70 mb-2 text-base font-light">{job.name}</div>
				
				<div class="pl-5 border-l-2 border-[#a855f7]/40 ml-2 relative">
					<!-- Decorative dot -->
					<div class="absolute -left-[5px] top-0 w-2 h-2 rounded-full bg-[#a855f7]"></div>
					
					<div class="flex items-start gap-2 text-white/90">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-[#a855f7] mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
						</svg>
						<p class="font-medium leading-snug text-sm">{job.summary.split('.')[0]}</p>
					</div>
					<p class="text-white/60 text-xs pl-6 leading-snug mt-1">
						{job.summary.split('.').slice(1).join('.').trim()}
					</p>
				</div>
			</div>
		))}
	</div>
</section>
