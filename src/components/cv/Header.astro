---
import Globe from "@lucide/astro/icons/globe";
import Mail from "@lucide/astro/icons/mail";
import Phone from "@lucide/astro/icons/phone";
import MapPin from "@lucide/astro/icons/map-pin";

interface Props {
  basics: {
    name: string;
    label: string;
    email: string;
    phone: string;
    url: string;
    location: {
      city: string;
      countryCode: string;
    };
  };
}

const { basics } = Astro.props;
---

<header
  class="flex flex-col md:flex-row print:flex-row justify-between items-start gap-6"
>
  <div class="relative z-10">
    <h1
      id="cv-owner-name"
      class="text-5xl md:text-6xl print:text-6xl font-bold uppercase leading-[0.9] tracking-tight font-heading"
    >
      <span class="text-white block">{basics.name.split(" ")[0]}</span>
      <span class="text-white block"
        >{basics.name.split(" ").slice(1).join(" ")}</span
      >
    </h1>
    <h2
      class="text-lg md:text-xl print:text-xl mt-2 font-semibold uppercase font-heading text-white"
    >
      {basics.label}
    </h2>
  </div>

  <address
    class="flex flex-col gap-2 text-sm md:text-sm print:text-sm text-white/80 mt-2 not-italic"
    aria-label="InformaciÃ³n de contacto"
  >
    <ul class="flex flex-col gap-2 list-none">
      <li>
        <div class="flex flex-col gap-0.5">
          <a
            href={basics.url}
            target="_blank"
            class="flex items-center gap-3 hover:text-[var(--color-accent)] transition-colors"
          >
            <Globe class="h-5 w-5" />
            <span>www.tomyg.com</span>
          </a>
          <p class="text-xs text-white/50 pl-8 uppercase tracking-wider">
            Portfolio y Proyectos
          </p>
        </div>
      </li>

      <li>
        <a
          href={`mailto:${basics.email}`}
          class="flex items-center gap-3 hover:text-[var(--color-accent)] transition-colors"
        >
          <Mail class="h-5 w-5" />
          <span>{basics.email}</span>
        </a>
      </li>

      <li>
        <a
          href={`tel:${basics.phone.replace(/\s/g, "")}`}
          class="flex items-center gap-3 hover:text-[var(--color-accent)] transition-colors"
        >
          <Phone class="h-5 w-5" />
          <span>{basics.phone}</span>
        </a>
      </li>

      <li>
        <div class="flex items-center gap-3">
          <MapPin class="h-5 w-5" />
          <span>{basics.location.city}</span>
        </div>
      </li>
    </ul>
  </address>
</header>
