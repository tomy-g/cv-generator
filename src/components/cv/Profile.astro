---
interface Props {
	summary: string;
	title: string;
}

const { summary, title } = Astro.props;
---

<section aria-labelledby="profile-heading">
	<h3 id="profile-heading" class="text-xl font-bold uppercase tracking-widest text-[var(--color-accent)] mb-3 font-heading">{title}</h3>
	<div class="text-white/80 leading-snug space-y-1 text-sm print:text-sm ">
		{summary
			.split('. ')
			.map((sentence) => sentence.trim())
			.filter(Boolean)
			.map((sentence) => (
				<p>{sentence.endsWith('.') ? sentence : `${sentence}.`}</p>
			))}
	</div>
</section>
