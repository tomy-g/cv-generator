---
interface Props {
	summary: string;
}

const { summary } = Astro.props;
---

<section>
	<h3 class="text-xl font-bold uppercase tracking-widest text-[var(--color-accent)] mb-3 font-heading">Perfil</h3>
	<div class="text-white/80 leading-snug space-y-1 text-sm print:text-sm ">
		{summary.split('. ').map((sentence) => (
			<p>{sentence.trim()}{sentence.endsWith('.') ? '' : '.'}</p>
		))}
	</div>
</section>
